# Application settings
DEBUG=true

# Database (PostgreSQL)
# Формат: postgresql+asyncpg://USER:PASSWORD@HOST:PORT/DATABASE
# Пример для сервера (порт 5440): postgresql+asyncpg://lifan:PASSWORD@localhost:5440/lecture_assistant
DATABASE_URL=postgresql+asyncpg://lifan:YOUR_PASSWORD@localhost:5440/lecture_assistant

# JWT (use a long random string in production)
JWT_SECRET=change-me-in-production-use-env
JWT_EXPIRE_MINUTES=10080

# Google Sign-In (Web — обязательно; Android — опционально, если токен приходит с Android audience)
GOOGLE_CLIENT_ID=685511640887-n0uhb49sok2eej9lulbb40apudjik0sb.apps.googleusercontent.com
GOOGLE_ANDROID_CLIENT_ID=685511640887-mecbp31p4fg9l01v5as08pbrn110q4l8.apps.googleusercontent.com

# ASR settings
WHISPER_MODEL=medium
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8

# LLM settings
LLM_PROVIDER=gemini  # "gemini" or "openai"

# Gemini settings (default)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash

# OpenAI settings (optional alternative)
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL=gpt-4o-mini

# Redis (for Celery - optional for MVP)
REDIS_URL=redis://localhost:6379/0
